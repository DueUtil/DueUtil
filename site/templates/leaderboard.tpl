                   <tr>
                      <th title="Player" style="width: 58px;" class="log-from mdl-data-table__cell--non-numeric"><i class="material-icons">person</i></th>
                      <th style="width: 100px;" class="log-from mdl-data-table__cell--non-numeric"></th>
                      <th style="width: 33%" class="log-from mdl-data-table__cell--non-numeric"></th>
                      <th title="Total Exp" class="log-amount mdl-data-table__cell"><i class="material-icons">bubble_chart</i></th>
                   </tr>
                </thead>
                <tbody>
                  [@logrows]
                </tbody>
             </table>
          </div>
