<div style="min-height:367px" class="table-log flex-content mdl-shadow--6dp">
       <div class="content-box-inner">
          <span class="mdl-layout-title">Wager requests</span>
          <div class="log-bg">
             <table class="mdl-data-table mdl-js-data-table log-table">
                <thead class="log-head">
                   <tr>
                      <th title="Sender" class="log-from mdl-data-table__cell--non-numeric"><i class="material-icons">person</i></th>
                      <th title="Name" class="log-from mdl-data-table__cell--non-numeric"></th>
                      <th title="Attack" class="text-center log-amount mdl-data-table__cell"><span class="due-emoji-th icon-fist-profile"></span></th>
                      <th title="Strg" class="text-center log-desc mdl-data-table__cell--non-numeric"><span class="due-emoji-th icon-strg"></span></th>
                      <th title="Accy" class="text-center log date mdl-data-table__cell--non-numeric"><span class="due-emoji-th icon-accy"></span></th>
                      <th title="Weapon" class="text-center log date mdl-data-table__cell--non-numeric"><span class="due-emoji-th icon-weapon"></span></th>
                      <th title="Amount" class="log date mdl-data-table__cell--non-numeric"><i class="material-icons">attach_money</i></th>
                   </tr>
                </thead>
                <tbody>
                  [@logrows]
                </tbody>
             </table>
          </div>
                                        [@message]
       </div>
</div>
